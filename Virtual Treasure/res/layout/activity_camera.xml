<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical">
    
   	<FrameLayout
		android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/flCamera"
	    android:orientation="vertical"/>
    
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/rlTreasure"
		android:orientation="vertical">
		<Spinner
	        android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="10sp"
		    android:layout_marginTop="10sp"
		    android:layout_width="150sp"
	        android:layout_height="wrap_content"
	        android:background="#343434"
	        android:id="@+id/spCameraFilter"/>
		<ImageButton 
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginRight="10sp"
			android:layout_marginTop="10sp"
			android:layout_width="40sp"
			android:layout_height="40sp"
			android:scaleType="centerInside"
			android:padding="4sp"
			android:background="@drawable/blackbutton"
			android:id="@+id/ibCameraCreateNew"
			android:src="@drawable/ic_menu_create_new"
			android:onClick="onCameraCreateNewButtonClicked"/>
	    <TextView
			android:id="@+id/debugText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
		    android:layout_alignParentBottom="true"
		    android:layout_marginRight="10sp"
		    android:layout_marginBottom="10sp"
	       	android:text="Current Angle"/>
	    <ImageButton 
		    android:layout_alignParentRight="true"
		    android:layout_alignParentBottom="true"
		    android:layout_marginRight="10sp"
		    android:layout_marginBottom="10sp"
		    android:layout_width="40sp"
		    android:layout_height="40sp"
		    android:scaleType="centerInside"
		    android:padding="0sp"
		    android:background="@drawable/blackbutton"
		    android:id="@+id/ibBackButton"
		    android:src="@drawable/ic_menu_back"
		    android:onClick="onCameraBackButtonClicked"/>
	</RelativeLayout>
	
</FrameLayout>