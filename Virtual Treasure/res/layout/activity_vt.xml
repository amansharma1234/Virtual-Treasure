<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_weight="0.13"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Virtual Treasure"
        android:textSize="25dp" />
    
    <!-- <Button
        android:id="@+id/buttonLogin"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/blackbutton"
        android:onClick="loginButtonClicked"
        android:text="Login / Create Account" /> -->
    
    <Button
        android:id="@+id/buttonFBLogin"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/blackbutton"
        android:onClick="facebookLoginButtonClicked"
        android:text="Login using Facebook" />

    <Button
        android:id="@+id/buttonAbout"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/blackbutton"
        android:onClick="aboutButtonClicked"
        android:text="About" />
    <Button
        android:id="@+id/buttonAck"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/blackbutton"
        android:onClick="ackButtonClicked"
        android:text="Acknowledgment" />
	<Button
        android:id="@+id/buttonExit"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/blackbutton"
        android:onClick="exitActivity"
        android:text="Exit" />
    
</LinearLayout>